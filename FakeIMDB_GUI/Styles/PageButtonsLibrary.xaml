<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vms="clr-namespace:FakeIMDB_GUI.ViewModels"
                    >
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="ColorLibrary.xaml" />
        <ResourceDictionary Source="ButtonStyleLibrary.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="NextPageButton"
           BasedOn="{StaticResource PrivateButtonStyleSmall}"
           TargetType="{x:Type Button}"
           >
        <Setter Property="Command" Value="{Binding XPath=vms:NextPage}" />
        <Setter Property="FontSize" Value="10" />
        <Setter Property="Margin" Value="0,10,0,0" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Content" Value="Next Page" />
    </Style>
</ResourceDictionary>